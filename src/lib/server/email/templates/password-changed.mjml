<mjml>
  <mj-head>
    <mj-title>Password Changed Successfully</mj-title>
    <mj-preview>Your SpentWorth password has been updated</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
      <mj-text font-size="15px" line-height="1.7" color="#404040" />
      <mj-button background-color="#0d9488" color="#ffffff" font-size="15px" font-weight="600" border-radius="10px" inner-padding="14px 32px" />
      <mj-section background-color="#ffffff" padding="0" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f5f0e8">
    <!-- Top Spacer -->
    <mj-section background-color="#f5f0e8" padding="40px 0 0 0"></mj-section>
    
    <!-- Header with Success Icon -->
    <mj-section background-color="#0d9488" border-radius="20px 20px 0 0" padding="40px 32px 32px 32px">
      <mj-column>
        <mj-text align="center" font-size="48px" padding="0 0 16px 0">
          âœ“
        </mj-text>
        <mj-text align="center" font-size="24px" font-weight="700" color="#ffffff" padding="0">
          Password Changed
        </mj-text>
        <mj-text align="center" font-size="15px" color="rgba(255,255,255,0.85)" padding-top="8px">
          Your account is secure
        </mj-text>
      </mj-column>
    </mj-section>
    
    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="40px 32px 24px 32px">
      <mj-column>
        <mj-text font-size="17px" color="#171717" font-weight="600" padding-bottom="16px">
          Hi {{name}},
        </mj-text>
        <mj-text>
          Your SpentWorth password was successfully changed on <strong style="color: #171717;">{{date}}</strong> at <strong style="color: #171717;">{{time}}</strong>.
        </mj-text>
      </mj-column>
    </mj-section>
    
    <!-- Change Details -->
    <mj-section background-color="#ffffff" padding="0 32px 24px 32px">
      <mj-column background-color="#f5f0e8" border-radius="12px" padding="20px">
        <mj-text font-size="13px" color="#737373" padding="0 0 12px 0">
          <strong style="color: #171717;">Change details:</strong>
        </mj-text>
        <mj-text font-size="14px" padding="0">
          ğŸ“ <strong>Location:</strong> {{location}}<br/>
          ğŸ’» <strong>Device:</strong> {{device}}<br/>
          ğŸŒ <strong>IP Address:</strong> {{ip_address}}
        </mj-text>
      </mj-column>
    </mj-section>
    
    <!-- Security Alert -->
    <mj-section background-color="#ffffff" padding="0 32px 32px 32px">
      <mj-column background-color="#fef2f2" border-radius="12px" padding="16px 20px">
        <mj-text font-size="14px" color="#dc2626" padding="0">
          <strong>ğŸš¨ Wasn't you?</strong> If you didn't make this change, your account may be compromised. 
          <a href="{{reset_url}}" style="color: #dc2626; font-weight: 600;">Reset your password immediately</a> 
          and contact us.
        </mj-text>
      </mj-column>
    </mj-section>
    
    <!-- Footer -->
    <mj-section background-color="#ffffff" border-radius="0 0 20px 20px" padding="24px 32px 32px 32px">
      <mj-column>
        <mj-divider border-color="#e5e5e5" border-width="1px" padding="0 0 24px 0" />
        <mj-text align="center" font-size="13px" color="#9ca3af">
          Questions about your account security? Contact us at 
          <a href="mailto:support@spentworth.com" style="color: #0d9488;">support@spentworth.com</a>
        </mj-text>
        <mj-text align="center" font-size="12px" color="#9ca3af" padding-top="16px">
          Â© {{year}} SpentWorth. All rights reserved.<br/>
          <a href="https://spentworth.com/privacy" style="color: #9ca3af;">Privacy</a> Â· 
          <a href="https://spentworth.com/terms" style="color: #9ca3af;">Terms</a>
        </mj-text>
      </mj-column>
    </mj-section>
    
    <!-- Bottom Spacer -->
    <mj-section background-color="#f5f0e8" padding="40px 0"></mj-section>
  </mj-body>
</mjml>

