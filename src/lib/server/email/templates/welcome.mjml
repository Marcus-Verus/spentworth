  </mj-head>
  <mj-body background-color="#f5f0e8">
    <!-- Top Spacer -->
    <mj-section background-color="#f5f0e8" padding="40px 0 0 0"></mj-section>
    
    <!-- Logo Header with Teal Gradient -->
    <mj-section background-color="#0d9488" border-radius="20px 20px 0 0" padding="40px 24px 32px 24px">
      <mj-column>
        <mj-image 
