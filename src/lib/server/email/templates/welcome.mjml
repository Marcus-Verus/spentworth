      </mj-column>
    </mj-section>
    
    <!-- Privacy Note -->
    <mj-section background-color="#ffffff" padding="0 32px 32px 32px">
      <mj-column background-color="#f0fdf4" border-radius="12px" padding="16px 20px">
        <mj-text font-size="14px" color="#15803d" padding="0">
