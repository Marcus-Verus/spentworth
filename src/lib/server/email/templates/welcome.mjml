      <mj-section background-color="#ffffff" padding="0" />
    </mj-attributes>
    <mj-style inline="inline">
      .highlight { background: linear-gradient(120deg, rgba(13, 148, 136, 0.1) 0%, rgba(13, 148, 136, 0.1) 100%); padding: 2px 6px; border-radius: 4px; }
      .stat-value { font-size: 28px; font-weight: 700; color: #0d9488; }
